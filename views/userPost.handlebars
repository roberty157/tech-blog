



<h1>User Post</h1>

<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    
    <p>Created by {{post.user.name}} on {{post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <form class="form edit-post-form">
      <div class="form-group">
        <label for="post-text">Text</label><br>
        <textarea id="post-text" name="post-text" rows="4" cols="50">
            {{post.description}}
        </textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
      
    </form>
      <button id="delete-post" class="btn btn-danger" >Delete</button>
  </div>
</div>
{{#each comments as |comment|}}
<div class="row mb-4">
    <div class="row mb-2">
        <div class="col-md-4">{{comment.user.name}}</div>
        <div class="col-md-4">{{comment.date_created}}</div>
    </div>
    <div class="row mb-2">{{comment.text}}</div>
    
</div>
{{/each}}
<script src="/js/editPost.js"></script>