<h1>Dashboard</h1>
<h1>Your Posts</h1>
{{#each userPosts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    
    <p>Created by {{post.user.name}} on {{post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}

<input type="button" onclick="location.href='./newPost';" value="create new post" />